{
  "line-length": {
    "line_length": 10000
  },
  "html": {
    "allowed_elements": [
      "a",
      "br",
      "code",
      "details",
      "div",
      "h4",
      "i",
      "img",
      "kbd",
      "p",
      "span",
      "summary"
    ]
  },
  "blank_lines": {
    "maximum": 2
  },
  "no-duplicate-heading": {
    "allow_different_nesting": true
  }
}
