[general]
verbosity=2
ignore=title-trailing-punctuation,body-is-missing
regex-style-search=True

[title-max-length]
line-length=72

# Dependabot tends to generate lines that exceed the char limit.
[ignore-by-author-name]
regex=dependabot
ignore=all
